
<div class="container-fluid">
  <div class="row justify-content-center align-items-center g-2">
    {{#each products}}
        
        <div class="col">
        <div class="card" style="width: 18rem;">
            
                <svg
                class="bd-placeholder-img card-img-top"
                
                role="img"
                aria-label="Marcador de posición: Cap de imagen"
                focusable="false"
                preserveAspectRatio="xMidYMid slice"
                xmlns="http://www.w3.org/2000/svg"
                >
                <title>Marcador de posición</title>
                <rect width="100%" height="100%" fill="#868e96"></rect><text
                    x="50%"
                    y="50%"
                    fill="#dee2e6"
                    dy=".3em"
                >
                {{#if this.thumbnail.length}}
            
                {{this.thumbnail.[0]}}
            
                {{else}}
                   Sin imagen previa
                {{/if}}
                </text>
                </svg>
            
            <div class="card-body">
            <h5 class="card-title">{{this.title}} </h5>
            <p>Id:{{this.id}}</p>
            <p class="card-text">{{this.description}}</p>
            <p class="card-text"><span>Price: ${{this.price}}</span>
            <span>Stock: {{this.stock}}</span></p>
            <p class="card-text">Code: {{this.code}}</p>
            <p class="card-text">Status: {{this.status}}</p>
            
            </div>
        </div>
        </div>
        
{{/each}}
  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
